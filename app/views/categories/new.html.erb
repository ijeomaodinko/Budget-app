
<%= form_with model: @category, url: categories_path do |f| %>
    <section class="container" >
      <div>
      <div class="desc_container"><h1 class="text_desc">Add Category</h1></div>
    <div class="field">
  
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:'Name', class: "text_field" %>
  </div>
  
    
    <div class="field">
    
      <%= f.text_field :icon, autofocus: true, autocomplete: "icon", placeholder: "Icon url", class: "text_field" %>
    </div>
    <div class = "link_div">
    <div class="actions">
      <%= f.submit "Save",  class: "btn  categorybtn"%>
    </div>
    <div class ="link_category">
      <%= link_to "Back to categories", categories_path %>
    </div>
    </div>
  </div>
  </section>
  <% end %>

